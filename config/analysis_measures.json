    "assessment_guidelines": {
        "score_ranges": {
            "90_100": {
                "label": "Exceptional",
                "description": "Exceeds expectations significantly, rare top-tier candidate"
            },
            "80_89": {
                "label": "Strong Hire",
                "description": "Exceeds expectations, highly qualified"
            },
            "70_79": {
                "label": "Hire",
                "description": "Meets expectations, solid candidate"
            },
            "60_69": {
                "label": "Weak Hire",
                "description": "Borderline, consider with reservations"
            },
            "0_59": {
                "label": "Reject",
                "description": "Does not meet minimum requirements"
            }
        },
        "recommendation_mapping": {
            "Strong Hire": "Score >= 80, demonstrated excellence across multiple criteria",
            "Hire": "Score 70-79, meets expectations with few gaps",
            "Weak Hire": "Score 60-69, meets minimum bar but has concerns",
            "Reject": "Score < 60, significant gaps in key criteria"
        }
    }
